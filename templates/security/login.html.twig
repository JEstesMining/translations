{% extends 'layout.html.twig' %}

{% block title %}{{'sign in'|trans}}{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-sm">
      {% if error %}
        <div class="alert alert-danger" role="alert">{{error.messageKey|trans(error.messageData, 'security')}}</div>
        {{dump(error)}}
      {% endif %}

      <form method="post">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <div class="mb-3">
            <label for="inputEmail" class="form-label">{{'email'|trans}}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="{{'email'|trans}}" required autofocus>
          </div>

          <div class="mb-3">
            <label for="inputPassword" class="form-label">{{'password'|trans}}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
          </div>


          <div class="mb-3 form-check">
              <input type="checkbox" name="_remember_me" checked class="form-check-input">
              <label for="_remember_me" class="form-label">{{'remember me'|trans}}</label>
          </div>
          <button class="btn btn-lg btn-primary" type="submit">{{'sign in'|trans}}</button>
      </form>

    </div>
  </div>
</div>
{% endblock %}
