{% extends 'layout.html.twig' %}

{% block title %}{{'sign in'|trans}}{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">

      <form method="post">
        <div class="card mt-5 shadow">
          <div class="card-body">
            {% if error %}
              <div class="alert alert-danger" role="alert">{{error.messageKey|trans(error.messageData, 'security')}}</div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3">
              <label for="inputEmail" class="form-label">{{'email'|trans}}</label>
              <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="{{'email'|trans}}" required autofocus>
            </div>

            <div class="mb-3">
              <label for="inputPassword" class="form-label">{{'password'|trans}}</label>
              <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="{{'password'|trans}}" required>
            </div>


            <div class="form-check">
              <input type="checkbox" name="_remember_me" checked class="form-check-input">
              <label for="_remember_me" class="form-label">{{'remember me'|trans}}</label>
            </div>

          </div>
          <div class="card-footer p-3 text-end">
            <a href="{{path('app_register')}}" class="btn btn-secondary me-2"><i class="fas fa-user-plus fa-fw"></i>&nbsp;{{'register'|trans}}</a>
            <button class="btn btn-primary" type="submit"><i class="fas fa-sign-in-alt fa-fw"></i>&nbsp;{{'sign in'|trans}}</button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
{% endblock %}
