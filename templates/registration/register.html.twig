{% extends 'layout.html.twig' %}

{% block title %}{{'register'|trans}}{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      {{ form_start(form) }}
        <div class="card mt-5 shadow">
          <div class="card-body">
            {% for flashError in app.flashes('verify_email_error') %}
              <div class="alert alert-danger" role="alert">{{flashError|trans}}</div>
            {% endfor %}

            {{form_row(form.email)}}

            {{form_row(form.plainPassword)}}

            {{form_row(form.invite_code)}}

          </div>
          <div class="card-footer p-3 text-end">
            <a href="{{path('app_login')}}" class="btn btn-outline-secondary me-2"><i class="fas fa-sign-in-alt fa-fw"></i>&nbsp;{{'sign in'|trans}}</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus fa-fw"></i>&nbsp;{{'register'|trans}}</button>
          </div>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
